pipeline {
    agent any

    stages {

        stage('Pull from repository') {

            steps {
                sh 'git pull'
            }
        }

        stage('Build project') {

            steps {
                sh 'mkdir build && cd build && cmake .. && make'
            }
        }

        stage('Test code') {
         
            steps {
                sh '../tests/unit_tests'
            }
        }

        stage('Deploy code') {
         
            steps {
                sh 'echo Test done.'
            }
        }
    }
}