pipeline {
    agent any

    stages {

        stage('Build project') {

            cmakeBuild
              buildDir: 'build',
              sourceDir: 'APCPPLib/lib/src',
              installation: 'InSearchPath',
        }

        stage('Test code') {
         
            steps {
                sh '../tests/unit_tests'
            }
        }

        stage('Deploy code') {
         
            steps {
                sh 'echo Test done.'
            }
        }
    }
}