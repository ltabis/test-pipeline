pipeline {
    agent any

    stages {
        stage('Build project') {
            steps {
                cmake installation: 'InSearchPath', arguments: '-B build .'
            }
        }
        stage('Test code') {
            steps {
                sh '/var/jenkins_home/workspace/Testing/APCPPLib/tests/unit_tests'
            }
        }
        stage('Deploy code') {
            steps {
                sh 'echo Needs to be inside a temporary repository, and then push to the desired repository.'
            }
        }
    }
}